@using System.Web.Optimization
@model Cibertec.MegaMarket.BL.BE.Usuario

@{
    ViewBag.Title = Cibertec.MegaMarket.UI.WebApp.Helpers.AppSettings.AppName;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Cibertec - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/iconos/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form id="FrmLogin" action="@Url.Action("Login", "Account")" method="post">
                    <h1 class="text-center">Acceso de Usuarios</h1>
                    <div class="form-error-mensage form-group">
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Usuario", @required = true })
                    </div>
                    <div class="form-error-mensage form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @required = true })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default"><i class="fa fa-sign-in"></i>&nbsp;Ingresar al Sistema</button>
                        <a class="reset_pass" href="#">Lost your password?</a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        <div class="mensaje-error"></div>
                        <div class="text-center">
                            <img src="@Url.Content("~/Content/images/logo_ingemmet.png")" style="height:60px;" />
                            <p>©@DateTime.Now.Year.ToString()  All Rights Reserved. Cibertec - @ViewBag.Title</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/base", "~/bundles/forms")
    <script src="@Url.Content("~/Scripts/Views/Account.js")" type="text/javascript"></script>
</body>
</html>

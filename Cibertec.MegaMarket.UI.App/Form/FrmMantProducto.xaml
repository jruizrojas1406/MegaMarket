<Window x:Class="Cibertec.MegaMarket.UI.App.Form.FrmMantProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cibertec.MegaMarket.UI.App.Form"
        mc:Ignorable="d"
        Title="Mantenimiento de Productos"
        Height="312.614" 
        Width="548.668"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,3">
        <Label x:Name="lblCodProducto" Content="Código Producto:" HorizontalAlignment="Left"  Margin="275,15,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left"  Margin="389,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" IsEnabled="False" />
        <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Left"  Margin="26,51,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left"  Margin="112,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" />
        <Label x:Name="lblDescripcion" Content="Descripción:" HorizontalAlignment="Left"  Margin="26,84,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left"  Margin="112,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" />
        <Label x:Name="lblCategoria" Content="Categoria:" HorizontalAlignment="Left"  Margin="26,119,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtStock" HorizontalAlignment="Left"  Margin="379,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" />
        <ComboBox x:Name="cboCategoria" HorizontalAlignment="Left" Margin="112,120,0,0" VerticalAlignment="Top" Width="142" Padding="8,2,0,0" Height="25"/>
        <ComboBox x:Name="cboMarca" HorizontalAlignment="Left" Margin="379,120,0,0" VerticalAlignment="Top" Padding="8,2,0,0" Height="25" Width="130"/>
        <Label x:Name="lblMarca" Content="Marca Comercial:" HorizontalAlignment="Left"  Margin="275,120,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblUmedida" Content="Unid. Medida:" HorizontalAlignment="Left"  Margin="26,155,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="cboUmedida" HorizontalAlignment="Left" Margin="112,156,0,0" VerticalAlignment="Top" Padding="8,2,0,0" Height="25" Width="142"/>
        <Label x:Name="lblStock" Content="Stock" HorizontalAlignment="Left"  Margin="335,156,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left"  Margin="379,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" />
        <Label x:Name="lblPrecio" Content="Precio:" HorizontalAlignment="Left"  Margin="329,195,0,0" VerticalAlignment="Top"  RenderTransformOrigin="0.996,0.309"/>
        <Label x:Name="lblImagen" Content="Imágen:" HorizontalAlignment="Left"  Margin="26,196,0,0" VerticalAlignment="Top" />
        <!--<Image x:Name="imgProducto" HorizontalAlignment="Left" Source="" Height="124" Margin="112,186,0,0" VerticalAlignment="Top" Width="152"/>-->
        <Button x:Name="btnGrabar" HorizontalAlignment="Left" Margin="320,238,0,0" VerticalAlignment="Top" Width="94" IsDefault="True"
                Style="{StaticResource ButtonFormulario}" Click="btnGrabar_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Save.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Grabar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnCancelar" HorizontalAlignment="Left" Margin="419,238,0,0" VerticalAlignment="Top" Width="90" IsCancel="False"
                Style="{StaticResource ButtonFormulario}" Click="btnCancelar_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Cancel.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Cancelar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

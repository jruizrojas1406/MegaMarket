<Window x:Class="Cibertec.MegaMarket.UI.Desktop.Form.Pedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedido"
        Height="600" 
        Width="800"
        Icon="/Images/Producto.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="0,0,-8,0">
        <Label x:Name="lblTipo" Content="Tipo" HorizontalAlignment="Left" Height="20" Margin="26,16,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtSerie" HorizontalAlignment="Left"  Margin="286,15,0,0" TextWrapping="Wrap" Padding="8,3,0,0"  VerticalAlignment="Top" Height="25" Width="78" FontSize="9"/>
        <Label x:Name="lblNombre" Content="Cliente" HorizontalAlignment="Left" Height="20" Margin="19,56,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="25" Margin="75,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" FontSize="9"/>
        <Label x:Name="lblDireccion" Content="Dirección" HorizontalAlignment="Left" Height="20" Margin="225,96,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="25" Margin="286,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" FontSize="9"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Height="25" Margin="75,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" FontSize="9"/>
        <ComboBox x:Name="cboFormaPago" HorizontalAlignment="Left" Margin="657,62,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblMarca" Content="Forma de Pago" HorizontalAlignment="Left" Height="22" Margin="576,62,0,0" VerticalAlignment="Top" FontSize="9" Width="72"/>
        <Label x:Name="lblRucDni" Content="RUC / DNI" HorizontalAlignment="Left" Height="20" Margin="19,96,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.656,-0.3"/>
        <TextBox x:Name="txtArticulo" HorizontalAlignment="Left" Height="25" Margin="77,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" FontSize="9"/>
        <Label x:Name="lblArticulo" Content="Artículo" HorizontalAlignment="Left" Height="20" Margin="19,147,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.996,0.309"/>
        <Label x:Name="lblImagen" Content="Descripción" HorizontalAlignment="Left" Height="20" Margin="225,146,0,0" VerticalAlignment="Top" FontSize="9"/>
        <Label x:Name="lblSerie" Content="Serie" HorizontalAlignment="Left" Margin="167,15,0,0" VerticalAlignment="Top" FontSize="9"/>
        <Label x:Name="lblNumero" Content="Número" HorizontalAlignment="Left" Margin="419,15,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtSerie_Copy" HorizontalAlignment="Left" Height="25" Margin="472,15,0,0" Padding="8,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <ComboBox x:Name="cboCategoria" HorizontalAlignment="Left" Margin="75,16,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSerie_Copy1" HorizontalAlignment="Left" Height="25" Margin="657,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" RenderTransformOrigin="0.981,0.556"/>
        <Label x:Name="lblFecha" Content="Fecha" HorizontalAlignment="Left" Margin="619,6,0,0" VerticalAlignment="Top" FontSize="9"/>
        <Label x:Name="lblHora" Content="Hora" HorizontalAlignment="Left" Margin="619,32,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtHora" HorizontalAlignment="Left" Height="25" Margin="657,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="419,54,0,0" VerticalAlignment="Top" Width="66"/>
        <ComboBox x:Name="cboMoneda" HorizontalAlignment="Left" Margin="657,89,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblMoneda" Content="Moneda" HorizontalAlignment="Left" Height="31" Margin="598,84,0,0" VerticalAlignment="Top" FontSize="9" Width="50"/>
        <Separator HorizontalAlignment="Left" Height="29" Margin="19,121,0,0" VerticalAlignment="Top" Width="758"/>
        <Button x:Name="btnAdicionar" Content="Adicionar" HorizontalAlignment="Left" Margin="702,193,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="25" Margin="286,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" FontSize="9"/>
        <Label x:Name="lblPrecio" Content="Precio" HorizontalAlignment="Left" Height="20" Margin="19,193,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.996,0.309"/>
        <Label x:Name="lblCantidad" Content="Cantidad" HorizontalAlignment="Left" Height="20" Margin="225,189,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.996,0.309"/>
        <Label x:Name="lblSubtotal" Content="Subtotal" HorizontalAlignment="Left" Height="20" Margin="442,189,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.996,0.309"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="25" Margin="77,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" FontSize="9"/>
        <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Height="25" Margin="286,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" FontSize="9"/>
        <TextBox x:Name="txtSubtotal" HorizontalAlignment="Left" Height="25" Margin="491,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" FontSize="9"/>
        <DataGrid x:Name="dgProductos" Margin="10,234,13,0" VerticalAlignment="Top" AutoGenerateColumns="False"  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Producto" Width="200" Binding="{Binding Path=Nombre}"></DataGridTextColumn>
                <DataGridTextColumn Header="Descripción" MinWidth="280" Width="*" Binding="{Binding Path=Descripcion}"></DataGridTextColumn>
                <DataGridTextColumn Header="Precio" Width="100" Binding="{Binding Path=Precio}"></DataGridTextColumn>
                <DataGridTextColumn Header="Cantidad" Width="100" Binding="{Binding Path=Cantidad}"></DataGridTextColumn>
                <DataGridTextColumn Header="Subtotal" Width="100" Binding="{Binding Path=Subtotal}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Editar" Width="80">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Name="btnEditar" Content="Editar" CommandParameter="{Binding}" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="/Images/EditColor.png" Width="20" Height="20"></Image>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Eliminar" Width="100">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Name="btnEliminar" Content="Eliminar" CommandParameter="{Binding}" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="/Images/DeleteColor.png" Width="20" Height="20"></Image>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="519">

            </Grid>
            <Grid DockPanel.Dock="Bottom" FlowDirection="RightToLeft" Height="50">
                <Button x:Name="btnGrabar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="32"  Style="{StaticResource ButtonFormulario}" Margin="126,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Grabar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
                        <Image Source="../Images/Save.png" Width="16" Height="16" Margin="3"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnCancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="32"  Style="{StaticResource ButtonFormulario}" Margin="21,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Cancelar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
                        <Image Source="../Images/Cancel.png" Width="16" Height="16" Margin="3"/>
                    </StackPanel>
                </Button>
            </Grid>
        </DockPanel>
    </Grid>
</Window>

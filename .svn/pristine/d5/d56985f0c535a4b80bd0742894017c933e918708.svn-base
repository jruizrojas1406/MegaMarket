<Window x:Class="Cibertec.MegaMarket.UI.Desktop.Form.MantProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cibertec.MegaMarket.UI.Desktop.Form"
        mc:Ignorable="d"
        Title="Mantenimiento de Productos"
        Height="312.614" 
        Width="548.668"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,3">
        <Label x:Name="lblProducto" Content="Producto" HorizontalAlignment="Left" Height="20" Margin="26,16,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Height="18" Margin="112,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" FontSize="9" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
        <Label x:Name="lblNombre" Content="Nombre" HorizontalAlignment="Left" Height="20" Margin="26,44,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="18" Margin="112,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" FontSize="9"/>
        <Label x:Name="label_Copy1" Content="Descripción" HorizontalAlignment="Left" Height="20" Margin="26,72,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="18" Margin="112,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" FontSize="9"/>
        <Label x:Name="label_Copy2" Content="Categoria" HorizontalAlignment="Left" Height="20" Margin="26,107,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Height="18" Margin="362,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" FontSize="9"/>
        <ComboBox x:Name="cboCategoria" HorizontalAlignment="Left" Margin="112,107,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cboMarca" HorizontalAlignment="Left" Margin="361,107,0,0" VerticalAlignment="Top" Width="148"/>
        <Label x:Name="lblMarca" Content="Marca Comercial" HorizontalAlignment="Left" Height="20" Margin="275,107,0,0" VerticalAlignment="Top" FontSize="9"/>
        <Label x:Name="lblUmedida" Content="Unidad de Medida" HorizontalAlignment="Left" Height="20" Margin="26,143,0,0" VerticalAlignment="Top" FontSize="9"/>
        <ComboBox x:Name="cboUmedida" HorizontalAlignment="Left" Margin="112,143,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy5" Content="Stock" HorizontalAlignment="Left" Height="20" Margin="320,143,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="18" Margin="361,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" FontSize="9"/>
        <Label x:Name="lblPrecio" Content="Precio" HorizontalAlignment="Left" Height="20" Margin="320,188,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.996,0.309"/>
        <Label x:Name="lblImagen" Content="Imágen" HorizontalAlignment="Left" Height="20" Margin="26,186,0,0" VerticalAlignment="Top" FontSize="9"/>
        <!--<Image x:Name="imgProducto" HorizontalAlignment="Left" Source="" Height="124" Margin="112,186,0,0" VerticalAlignment="Top" Width="152"/>-->
        <Button x:Name="btnGrabar" HorizontalAlignment="Left" Margin="320,238,0,0" VerticalAlignment="Top" Width="94" Style="{StaticResource ButtonFormulario}">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Save.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Grabar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnCancelar" HorizontalAlignment="Left" Margin="419,238,0,0" VerticalAlignment="Top" Width="90" Style="{StaticResource ButtonFormulario}">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Cancel.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Cancelar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>

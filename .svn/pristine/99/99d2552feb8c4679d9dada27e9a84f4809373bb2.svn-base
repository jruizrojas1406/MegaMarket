<Window x:Class="Cibertec.MegaMarket.UI.App.Form.FrmMantCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cibertec.MegaMarket.UI.App.Form"
        mc:Ignorable="d"
        Title="Mantenimiento de Clientes"
        Height="362.614" 
        Width="548.668"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,3">
        <Label x:Name="lblCodCliente" Content="Código Cliente:" HorizontalAlignment="Left"  Margin="275,15,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left"  Margin="389,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" IsEnabled="False" />
        <Label x:Name="lblNombres" Content="Nombres:" HorizontalAlignment="Left"  Margin="26,51,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtNombres" HorizontalAlignment="Left"  Margin="115,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" />
        <Label x:Name="lblApellidos" Content="Apellidos:" HorizontalAlignment="Left"  Margin="284,51,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtApellidos" HorizontalAlignment="Left"  Margin="361,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" />
        <Label x:Name="lblPais" Content="Pais:" HorizontalAlignment="Left"  Margin="26,197,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="cboPais" HorizontalAlignment="Left" Margin="115,198,0,0" VerticalAlignment="Top" Width="141" Padding="8,2,0,0" Height="25" DropDownClosed="cboPais_DropDownClosed"/>
        <ComboBox x:Name="cboCiudad" HorizontalAlignment="Left" Margin="379,198,0,0" VerticalAlignment="Top" Padding="8,2,0,0" Height="25" Width="130" IsEnabled="False" DropDownClosed="cboCiudad_DropDownClosed"/>
        <Label x:Name="lblCiudad" Content="Ciudad:" HorizontalAlignment="Left"  Margin="287,198,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblDistrito" Content="Distrito:" HorizontalAlignment="Left"  Margin="26,233,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="cboDistrito" HorizontalAlignment="Left" Margin="115,234,0,0" VerticalAlignment="Top" Padding="8,2,0,0" Height="25" Width="141" IsEnabled="False"/>
        <!--<Image x:Name="imgCliente" HorizontalAlignment="Left" Source="" Height="124" Margin="112,186,0,0" VerticalAlignment="Top" Width="152"/>-->
        <Button x:Name="btnGrabar" HorizontalAlignment="Left" Margin="320,279,0,0" VerticalAlignment="Top" Width="94" IsDefault="True"
                Style="{StaticResource ButtonFormulario}" Click="btnGrabar_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Save.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Grabar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnCancelar" HorizontalAlignment="Left" Margin="419,279,0,0" VerticalAlignment="Top" Width="90" IsCancel="False"
                Style="{StaticResource ButtonFormulario}" Click="btnCancelar_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/Cancel.png" Width="16" Height="16" Margin="3"/>
                <TextBlock Text="Cancelar" Foreground="White" Padding="5,2,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Label x:Name="lblTelMovil" Content="Tel. Movil:" HorizontalAlignment="Left"  Margin="26,86,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtTelFijo" HorizontalAlignment="Left"  Margin="361,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" />
        <TextBox x:Name="txtTelMovil" HorizontalAlignment="Left"  Margin="115,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" />
        <Label x:Name="lblTelFijo" Content="Tel. Fijo:"  Margin="284,88,197,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left"  Margin="115,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" />
        <Label x:Name="lblDirección" Content="Dirección:" HorizontalAlignment="Left"  Margin="26,122,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblDocIdentidad" Content="Doc. Identidad:" HorizontalAlignment="Left"  Margin="26,159,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left"  Margin="294,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" />
        <TextBox x:Name="txtDocIdentidad" HorizontalAlignment="Left"  Margin="115,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" />
        <Label x:Name="lblEmail" Content="Email:"  Margin="245,161,236,0" VerticalAlignment="Top" />
    </Grid>
</Window>
